<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_back"
        style="@style/toolbar_item_ll_style">

        <Button
            android:id="@+id/btn_back"
            style="@style/toolbar_item_btn_style"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/full_screen" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_num"
        style="@style/toolbar_item_ll_style"
        android:layout_weight="1"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_page_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add"
        style="@style/toolbar_item_ll_style"
        android:gravity="center"
        android:visibility="invisible">

        <Button
            style="@style/toolbar_item_btn_style"
            android:background="@drawable/add_draw_view" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_undo"
        style="@style/toolbar_item_ll_style"
        android:visibility="invisible">

        <Button
            style="@style/toolbar_item_btn_style"
            android:background="@drawable/ic_undo" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_save"
        style="@style/toolbar_item_ll_style">

        <Button
            style="@style/toolbar_item_btn_style"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/c_bc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reset"
        style="@style/toolbar_item_ll_style">

        <Button
            style="@style/toolbar_item_btn_style"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/c_wj" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_redo"
        android:visibility="gone"
        style="@style/toolbar_item_ll_style">

        <Button
            style="@style/toolbar_item_btn_style"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/c_exit" />
    </LinearLayout>
</LinearLayout>